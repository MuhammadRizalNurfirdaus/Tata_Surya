<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="8dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/space_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageObject"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/space_text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/space_text_secondary"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textSatCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_satellite"
                android:textColor="@color/space_text_primary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:minWidth="40dp"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:contentDescription="Jumlah satelit" />
        </LinearLayout>

        <TextView
            android:id="@+id/textDiameter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/space_text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="6dp" />

        <ImageView
            android:id="@+id/actionShare"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_share"
            android:contentDescription="Bagikan info objek"
            android:layout_marginTop="10dp"
            android:background="@drawable/ripple_accent"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
